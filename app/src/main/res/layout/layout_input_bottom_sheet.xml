<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sticky_background_light"
    android:orientation="vertical"
    android:padding="20dp">

    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:background="#D6D6D6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Editar Nota"
        android:textColor="@color/sticky_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_widget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="Digite o texto do seu widget..."
        android:inputType="textMultiLine"
        android:minHeight="150dp"
        android:padding="12dp"
        android:textAlignment="center"
        android:textColor="@color/sticky_text"
        android:textColorHint="#9E9E9E" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="#E0E0E0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:text="Limpar"
            android:textColor="#E53935"
            app:icon="@drawable/ic_clear"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:iconTint="#E53935" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fechar"
            android:textColor="#757575"
            app:icon="@drawable/ic_close"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:iconTint="#757575" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:backgroundTint="@color/sticky_yellow"
            android:text="Salvar"
            android:textColor="@color/sticky_text"
            app:icon="@drawable/ic_save"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconSize="18dp"
            app:iconTint="@color/sticky_text" />
    </LinearLayout>

</LinearLayout>
